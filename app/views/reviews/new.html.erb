<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Add a new review for <%= @restaurant.name %></h1>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: 0..5, as: "range", input_html: { id: 'range', min: '0', max: '5', value: '0'} %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>

<script>
  const my_input_range = document.querySelector(".review_rating > input");
  my_input_range.addEventListener("mousedown", () => {
    const my_button = document.querySelector(".btn-primary")
    my_input_range.addEventListener("input", () => {
    const my_value = my_input_range.value;
    my_button.value = `Submit a ${my_value} â˜… Review`
    });
  });
</script>

