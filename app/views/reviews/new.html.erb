<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Add a new review for <%= @restaurant.name %></h1>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, error: 'Are you crazy (and/or stupid)? Rating is required and must be a number between 0 and 5' %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
